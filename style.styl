body
    margin  0
    padding 0
header
    width 100%
    height 100px
   
    .wrapper
        max-width 1300px
        margin auto
        display flex
        align-items center
        height: 100%
        padding: 0%
        
        &-logo
            width: 50px
            height: 50px
        
        img
            width: 100%
            height: 100%
        
        &-hamburger
            width 50px
            height 50px
            display flex
            flex-direction: column
            justify-content: space-between
            cursor 
            
            span
                border: 2px solid black
    nav
        position: absolute
        left: 50%
        transform: translateX(-50%) translateY(-100px)